
all: mhr BMI Account TestInvoice

mhr: mhr.o
	g++ mhr.o -o mhr
mhr.o: mhr.cpp
	g++ -c mhr.cpp --std=c++11 -Wall -pedantic
BMI: BMI.o
	g++ BMI.o -o BMI
BMI.o: BMI.cpp
	g++ -c BMI.cpp --std=c++11 -Wall -pedantic
Account: Account.o
	g++ Account.o -o Account
Account.o: Account.cpp Account.h
	g++ -c Account.cpp --std=c++11 -Wall -pedantic
Invoice.o: Invoice.cpp Invoice.h
	g++ -c Invoice.cpp --std=c++11 -Wall -pedantic
TestInvoice.o: TestInvoice.cpp Invoice.h
	g++ -c TestInvoice.cpp --std=c++11 -Wall -pedantic
TestInvoice: TestInvoice.o Invoice.o
	g++ TestInvoice.cpp TestInvoice.o -o Invoice.o
